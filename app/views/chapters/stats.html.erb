<div class="col">
  <h1>Stats</h1>

  <table class="table">
    <tr>
      <td>Community Building Points</td>
      <td>{{points['cb']}}</td>
    </tr>
    <tr>
      <td>Policy Change Points</td>
      <td>{{points['pc']}}</td>
    </tr>
    <tr>
      <td>Training and Education Points</td>
      <td>{{points['te']}}</td>
    </tr>
    <tr>
      <td>Total Earned</td>
      <td><%= @actions.sum("points") %></td>
    </tr>
    <tr>
      <td>Total Spent</td>
      <td>{{points['spending']}}</td>
    </tr>
    <tr>
      <td>High Quality Community Builders</td>
      <td>{{hq['cb']}}</td>
    </tr>
    <tr>
      <td>High Quality Advocates</td>
      <td>{{hq['pc']}}</td>
    </tr>
    <tr>
      <td>High Quality Educators</td>
      <td>{{hq['te']}}</td>
    </tr>
    <tr>
      <td>High Quality Chapters</td>
      <td>{{hq['hq']}}</td>
    </tr>
  </table>
  <h1>Completed Activities</h1>
  <table class="table">
    <% @categories.each do |category| %>
      <tr>
        <td>
          <a href=""><%= category.name %></a>
        </td>
        <td><%= @actions.where("category_id=#{category.id}").count%></td>
      </tr>
      <% end %>
    </table>
  </div>
