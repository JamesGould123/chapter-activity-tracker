<h1><%= @user.name %></h1>
<div class="col">
    <div class="container">
        <div class="row no-gutters">
            <div class="border col-3 bucket">
                <div class="progress-fill" style="height: <%= @cb_points %>%"> </div>
                <p class="progress-label text-center">Chapter Building</p>
                <span class="point-decl"><%= @cb_points %> points</span>
              </div>
            <div class="border col-3 bucket">
                <div class="progress-fill" style="height:<%= @pc_points %>%"></div>
                <p class="progress-label text-center">Policy Change</p>
                <span class="point-decl"><%= @pc_points %> points</span>
            </div>
            <div class="border col-3 bucket">
                <div class="progress-fill" style="height:<%= @te_points %>%"></div>
                <p class="progress-label text-center">Training and Education</p>
                <span class="point-decl"><%= @te_points %> points</span>
            </div>
            <div class="border col-3 bucket">
                <div class="container">
                    <div class="row">
                        <p class="points-earned text-center"><%= @cb_points + @pc_points + @te_points %></p>
                    </div>
                    <div class="row">
                        <p class="text-center margin-center">Spent: {{ chapter['cb'] + chapter['pc'] + chapter['te'] - chapter['balance']}} </p>
                    </div>
                    <div class="row">
                        <p class="text-center margin-center">Current balance: {{chapter['balance']}}</p>
                    </div>
                    <div class="row">
                      <%= image_tag("shark.png", class: "img-responsive") %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <h2>Activity Feed</h2>
        </div>
        <div class="feed-div row mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Action</th>
                        <th scope="col">Points</th>
                        <th scope="col">Note</th>
                        {% if g.user['Permissions'] == 'Admin' or g.user['Permissions'] == 'Staffer' or g.user['url'] == url_verify %}
                        <th scope="col"></th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for action in actions %}
                    <tr>
                        <td>
                            {{ action['title'] }}
                        </td>
                        <td>
                            {{ action['points'] }}
                        </td>
                        <td>
                            {{ action['note'] }}
                        </td>
                        {% if g.user['Permissions'] == 'Admin' or g.user['Permissions'] == 'Staffer' or g.user['url'] == url_verify %}

                        <td>
                            <a class="action" href="{{ url_for('blog.update', id=action['id']) }}">Edit</a>
                        </td>
                        {% endif %}

                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endblock %}
