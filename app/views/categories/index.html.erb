<h2>Chapter Building</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Default points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapter_building_categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= category.default_points %></td>
