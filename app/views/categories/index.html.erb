<p id="notice"><%= notice %></p>

<h1>Available Activities</h1>
<p>These are all the available activities that your chapter can complete. <a href="#espanol">En Espa√±ol</a></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Default points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= category.default_points %></td>
        <% if current_user.permissions == "administrator" %>

        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
